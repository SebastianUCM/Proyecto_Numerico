                    root.manager.transition.direction = 'up' 
                    root.manager.transition.duration = 1 
                    root.manager.current = 'ma_option_window'

            Button:
                text: 'Espacio Euclidiano R^n'
                background_color : 1, 1, 0, 5 
                group: 'accordion'
                on_press: 
                    root.manager.transition.direction = 'left' 
                    root.manager.transition.duration = 1 
                    root.manager.current = 'eu_option_window'

            Button:
                text: 'Espacio de funciones Continuas en [a,b]'
                background_color : 1, 1, 0, 5 
                group: 'accordion'
                on_press: 
                    root.manager.transition.direction = 'left' 
                    root.manager.transition.duration = 1 
                    root.manager.current = 'ef_option_window'

            Button:
                text: 'Integracion Numerica'
                background_color : 1, 1, 0, 5 
                group: 'accordion'
                on_press: 
                    root.manager.transition.direction = 'left' 
                    root.manager.transition.duration = 1 
