<Grafico_N_R2>:
    name: 'Accordion'
    fullscreen: True
    p: p
    graph : graph
    text_x1: text_x1

    canvas.before:
        Color:
            rgb: .9, .2, .5
        Rectangle:
            size: self.size
            source: 'data/background.png'
    
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'center'
        Label:
            size_hint_y: None
            height: '60dp'
            text: 'Graficos en R2'
            font_size: '48dp'

        BoxLayout:
            size_hint_y: None
            height: '60dp'
            orientation: 'horizontal'
            Label:
                text: ''
            Image:
                source: 'Image/5.0.png'
            Label:
                id: text_x1
                text: 'P : '
                multiline: False
            TextInput:
                id: p
                background_color : 3, 2, 0, 1
                multiline: False
            Label:
                text: ''
        
        BoxLayout:
            size_hint_y: None
            height: '400dp'
            Graph:
                id: graph
                plot: MeshLinePlot
                xlabel:'X'
                ylabel:'Y'
                x_ticks_minor:5
                x_tics_major:25
                y_ticks_major:1
                y_grid_label:True
                x_grid_label:True
                padding:5
                x_grid:True
                y_grid:True
                xmin:-6
                xmax:6
                ymin:-4
                ymax:4
                pos: 0, root.height / 6
                size: root.width * 2 / 3 , root.height * 18 / 24
        
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            
            Button:
                background_color : 3, 2, 0, 1
                text: 'Volver'
                on_press: 
                    root.manager.transition.direction = 'right' 
                    root.manager.transition.duration = 1 
                    root.manager.current = 'eu_option_window'
            Button:
                background_color : 3, 2, 0, 1
                text: 'Graficar'
                on_press: 
                    root.manager.transition.direction = 'right' 
                    root.manager.transition.duration = 1 
                    root.Create_Graph()

            Button:
                background_color : 3, 2, 0, 1
                text: 'Salir'
                on_release:app.stop()

