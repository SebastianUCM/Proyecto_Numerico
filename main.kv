<EUNormType>: 
    name: 'Accordion'
    fullscreen: True
    n: n
    p: p
    output_vector: _id_lbl_vector
    output_x1: _id_lbl_x1
    output_x2: _id_lbl_x2
    output_x3: _id_lbl_x3
    output_xp: _id_lbl_xp

    canvas.before:
        Color:
            rgb: .9, .2, .5
        Rectangle:
            size: self.size
            source: 'data/background.png'
    
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_y: 'bottom'
            anchor_x: 'center'

            Label:
                text: 'Tipos de Normas en R^n'
                font_size: '48dp'

        BoxLayout:
            orientation: 'horizontal'
            padding: 10

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                padding: 10
                Label:
                    text: 'N: '
                    font_size: 60
                TextInput:
                    id: n
                    font_size: 60
                    height: 60

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                padding: 10
                Label:
                    text: 'P: '
                    font_size: 60
                TextInput:
                    id: p
                    font_size: 60
                    height: 60
        BoxLayout:
            Label:
                id: _id_lbl_vector
                text: "AQUI"
                height: 40
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
        BoxLayout:
            Button:
                text: '1'
            Label:
                id: _id_lbl_x1
                text: "AQUI"
                height: 40
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

        BoxLayout:
            Button:
                text: '2'
            Label:
                id: _id_lbl_x2
                text: "AQUI"
                height: 40
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

        BoxLayout:
            Button:
                text: '3'
            Label:
                id: _id_lbl_x3
                text: "AQUI"
                height: 40
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

        BoxLayout:       
            Button:
                text: '4'  
            Label:
                id: _id_lbl_xp
                text: "AQUI"
                height: 40
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]   
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            
            Button:
                text: 'Volver'
                on_press: 
                    root.manager.transition.direction = 'right' 
                    root.manager.transition.duration = 1 
                    root.manager.current = 'eu_option_window'
            Button:
                text: 'Calcular'
                on_press: root.inputN()

            Button:
                text: 'Salir'
                on_release:app.stop()
  
