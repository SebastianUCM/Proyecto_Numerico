<Ventana_Menu>: 
    name: 'Accordion'
    fullscreen: True
    canvas.before:
        Color:
            rgb: .2, .2, .5
        Rectangle:
            size: self.size
            source: 'data/background.png'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Espacios Normados'
            font_size: '45dp'

        BoxLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            padding: 20,20,20,20
            spacing: 10
            size_hint:1, 0.50
            border: 90,90,90,90
            orientation: 'vertical'

            Button:
                text: 'Metodos de integracion Numerica'
                background_color : 1, 1, 0, 5 
                group: 'accordion'
